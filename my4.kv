<MyGrid>:
    imie: imie   #przypisanie zmiennych
    nazw: nazwisko
    rok: rok
    GridLayout:
        cols:1
        #size: 800, 600
        size: root.width -100, root.height -100
        pos: 50, 50
        GridLayout:
            cols:2
            Label:
                text: "Imie"
            TextInput:
                id: imie
                multiline: False
            Label:
                text: "Nazwisko"
            TextInput:
                id: nazwisko
                multiline: False
            Label:
                color: 0, 1, 0, 1
                text: "rok_urodzenia"
            TextInput:
                id: rok
                multiline: False
        Button:
            background_color: 1, 0, 0, 1
            text: "Submit"
            on_press:root.btn()
